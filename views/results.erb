<title>Search Results</title>

<div class="container">

	<h2>Search Results</h2>

<div class="centered">
	
	<table class="table table-hover" style="width:50%;">
	
	<tr>
	<th>Title</th>
	<th>Year</th>
	</tr>

	<% @movies_arr.map do |search_hash| %>
		<tr>
	    <td><a href="/poster/<%= "#{search_hash["imdbID"]}"%>"><%= search_hash["Title"] %></a></td>
	    <td><%= search_hash["Year"] %></td>
	    </tr>
	<% end %>
		
	</table>

</div> <!-- end centered -->

<div class="new_search_link">
	<a href="/">New Search</a>
</div> <!-- end new_search_link -->

</div>

